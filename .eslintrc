{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
        // indentation
        "indent" : [2, 4, { "ignoredNodes": ["JSXElement *"] }],

        "no-use-before-define": [ 2, { "functions": false } ],

        // make it meaningful
        "prefer-const": 1,

        // spacing
        "react/jsx-filename-extension": 0,
        "react/jsx-curly-spacing": [ 2, "always" ],
        //"react/jsx-indent-props": [ 2, 4 ],
        "react/jsx-indent": [ 2, 4 ]
    }
}
